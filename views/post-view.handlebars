

{{>post-details}}

    <div class="row">
      <form class="col s12">
        <div class="row">
          
        {{#if logged_in}}
          <div class="input-field col s12">
            <textarea id="comment-text" class="materialize-textarea" data-length="3000"></textarea>
            <label for="comment-text">Comment? "I like the cover," he said. "‘Don’t Panic.’ It’s the first helpful or intelligible thing anybody’s said to me all day."</label>
          </div>
        </div>
        <button id="submit-btn" class="btn waves-effect waves-light center-align" type="submit" name="action">Add comment
            <i class="material-icons right">send</i>
        </button
      {{else}}
      <h5 class="center-align">You must be <a href="/login">logged in</a> (and have your towel) to post a comment.</h5>
      {{/if}}
      </form>
    </div>
    
{{#each Comments as |Comment|}}

<div class="row">
    <div class="col s12 m8 offset-m2 center-align">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text comment-author">

          <p>{{> comments-details}}</p>
          
        </div>


      </div>
    </div>
  </div>

{{/each}}

{{#if logged_in}}
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="../js/comment.js"></script>
{{else}}
{{/if}}